-------------------------------------------------------------------------------
-- Prompt: {{{
share.__prompt = nyagos.prompt
nyagos.prompt = function(template)
  local user = nyagos.getenv('USERNAME')
  local host = nyagos.getenv('USERDOMAIN')
  local home = nyagos.getenv('HOME') or nyagos.getenv('USERPROFILE')
  local path = nyagos.getwd():gsub(home, '~')
  local output, err = nyagos.raweval('net', 'session')
  local root = err and '$$' or '#'
  return share.__prompt('$e[32;40;1m' .. user .. '@' .. host ..
    ' $e[33;40;1m' .. path .. '$e[0m\n' .. root .. ' ')
end
-- }}}

-------------------------------------------------------------------------------
-- Su: {{{
if nyagos.stat(prof .. '\\Apps\\ckw') then
  share.__su    = nyagos.getalias('su')
  share.__clone = nyagos.getalias('clone')
  alias {
    su = function()
      local arch = nyagos.getenv('PROGRAMFILES(X86)') and 'x64' or 'x86'
      local status, err = nyagos.shellexecute('runas',
        nyagos.getenv('USERPROFILE') .. '\\Apps\\ckw\\' .. arch .. '\\ckw.exe')
      if not status and _su then
        share.__su()
      else
        assert(status, err)
      end
    end,
    clone = function()
      local arch = nyagos.getenv('PROGRAMFILES(X86)') and 'x64' or 'x86'
      local status, err = nyagos.shellexecute('open',
        nyagos.getenv('USERPROFILE') .. '\\Apps\\ckw\\' .. arch .. '\\ckw.exe')
      if not status and _clone then
        share.__clone()
      else
        assert(status, err)
      end
    end,
  }
end
-- }}}

-------------------------------------------------------------------------------
-- Less TailF: {{{
if nyagos.which('less') then
  nyagos.alias.ltail = function(args)
    local o = nyagos.getenv('LESSOPEN')
    local c = nyagos.getenv('LESSCLOSE')
    nyagos.setenv('LESSOPEN')
    nyagos.setenv('LESSCLOSE')
    nyagos.exec('less +F ' .. table.concat(args, ' '))
    nyagos.setenv('LESSOPEN', o)
    nyagos.setenv('LESSCLOSE', c)
  end
end
-- }}}

