highlight() {
  if [ -f "${HOME}/.source-highlight/src-hilite-lesspipe.sh" ]; then
    ${HOME}/.source-highlight/src-hilite-lesspipe.sh "$1"
  elif [ -f "/usr/local/share/source-highlight/src-hilite-lesspipe.sh" ]; then
    /usr/local/share/source-highlight/src-hilite-lesspipe.sh "$1"
  elif [ -f "/usr/share/source-highlight/src-hilite-lesspipe.sh" ]; then
    /usr/share/source-highlight/src-hilite-lesspipe.sh "$1"
  elif which src-hilite-lesspipe.sh > /dev/null; then
    src-hilite-lesspipe.sh "$1"
  else
    source-highlight --failsafe --infer-lang -f esc --style-file=esc.style -i "$1"
  fi
}


if file -Lb "$1" | grep '\btext\b' > /dev/null; then
  if which source-highlight > /dev/null; then
    if which nkf > /dev/null; then
      highlight "$1" | nkf -w
    else
      highlight "$1"
    fi
  elif which nkf > /dev/null; then
    nkf -w "$1"
  fi
  exit 0
fi
exit 1
