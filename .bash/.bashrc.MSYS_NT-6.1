# Alias: {{{
if hash grep 2> /dev/null; then
	unalias grep
	alias lld="ll | grep '/$'"
	alias llf="ll | grep -v '/$'"
	alias lle="ll | grep '\*$'"
	alias lls="ll | grep '\->'"
fi
if hash vim; then
	if hash gvim; then
		alias vi="gvim"
	else
		alias vi="vim"
	fi
fi
if hash gmake; then
	alias make="gmake"
elif hash mingw32-make; then
	alias make="mingw32-make"
fi
